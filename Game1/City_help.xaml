<Window x:Class="AdventureGame.City"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdventureGame"
        mc:Ignorable="d"
        Title="City" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22" Width="712"><Run Text="Вы решили попыттаться получить информацию о выходе из города у местных жителей"/><Run Language="ru-ru" Text=". Увас есть несколько вариантов, какой выберете?"/><LineBreak/><Run Language="ru-ru"/></TextBlock>
        <Button Content="Просто спросить" HorizontalAlignment="Center" Margin="0,141,0,0" VerticalAlignment="Top" Click="Ask_Click" FontSize="18" Width="300" Height="30"/>
        <Button Content="Предложиь оплату за информацию" HorizontalAlignment="Center" Margin="0,185,0,0" VerticalAlignment="Top" Click="Buy_information_Click" Width="300" Height="30" FontSize="18"/>
        <Button Content="Подкараулить жителя и допросить" HorizontalAlignment="Center" Margin="0,232,0,0" VerticalAlignment="Top" Click="Atack_civilian_Click" Width="300" Height="30" FontSize="18"/>

    </Grid>
</Window>
