<Window
    x:Class="AdventureGame.City_transition"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AdventureGame"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="City_transition"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <TextBlock
            Width="562"
            Height="76"
            Margin="102,38,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" FontSize="22"><Run Language="ru-ru" Text="Поздравляем Вы продвинулись вперед, теперь Вы попали в таинственный город! Выберите действие." /><LineBreak /><Run Language="ru-ru" /></TextBlock>
        <Button
            Margin="0,252,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Обратиться за помощью" Click="Ask_for_help_Click" Width="300" Height="30" />
        <Button
            Margin="0,306,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Самостоятельно поискать выход" Click="Independent_search_Click" Width="300" Height="30" />

    </Grid>
</Window>
